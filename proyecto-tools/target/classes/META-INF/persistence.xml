<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="proyecto-tools" transaction-type="RESOURCE_LOCAL">
		<class>proyecto.domain.Empleado</class>
		<class>proyecto.domain.Estado</class>
		<class>proyecto.domain.Mantenimiento</class>
		<class>proyecto.domain.Maquinaria</class>
		<class>proyecto.domain.Reporte</class>
		<class>proyecto.domain.Sucursal</class>
		<class>proyecto.domain.TipoDano</class>
		<class>proyecto.domain.TipoUsuario</class>
		<class>proyecto.domain.Usuario</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/tools"/>
			<property name="javax.persistence.jdbc.user" value="postgres"/>
			<property name="javax.persistence.jdbc.password" value="postgres"/>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
		</properties>
	</persistence-unit>
</persistence>
